// Append new data
$("<%= escape_javascript(render("cards/cards", cards: @all_likes)) %>")
  .appendTo($("#cards"));
highlight();
// Update pagination link
<% if @all_likes.last_page? %>
  $('.pagination').html("That's all!");
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@all_likes, 'Load more..', :remote => true) %>");
<% end %>
