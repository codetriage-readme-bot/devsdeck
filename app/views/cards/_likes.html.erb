<% if current_user %>
  <%= link_to card_like_or_unlike_path(card),
    method: :patch,
    remote: true,
    title: "Like Heart" do %>
  <% if current_user.voted_up_on? card %>
    <i class="heart red like icon"></i>
  <% else %>
    <i class="heart outline like icon"></i>
  <% end%>
<% end %>
<% else %>
  <i class="heart outline like icon"></i>
<% end %>
<%= card.cached_votes_up %>
